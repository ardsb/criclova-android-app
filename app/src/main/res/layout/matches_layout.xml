<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPaddingBottom="10dp"
        card_view:contentPaddingLeft="10dp"
        card_view:contentPaddingRight="10dp"
        card_view:contentPaddingTop="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/england_logo"

                />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/new_zealand_cricket"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/liveScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="live Score"
                android:layout_marginTop="50dp"
                android:layout_marginRight="20dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#BA0E0E" />
            <TextView
                android:id="@+id/txtMatchesOutput"
                android:layout_width="match_parent"
                tools:text="VerrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrVerrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrVerrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrVerrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrVerrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrVerrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrVerrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrrr Long text"
                android:layout_height="wrap_content"
                android:text="TextView" />



        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>